<?xml version = "1.0" standalone="yes"?>
<configuration>

  <peppers>
      
    <pepper id="authorizationManager" class="__AuthorizationManager"/>
    
    <pepper id="authenticationManager" class="__AuthenticationManager">
      <property name="authenticators">
        <list>
          <ref id="authenticator"/>
        </list>
      </property>
    </pepper>

    <!-- authenticators: -->
    <pepper id="authenticator" class="__Authenticator">
      <property name="userLoader">
        <ref id="phalUserLoader"/>
      </property>
    </pepper>
    
    <!-- The user loader that will we use will be a __PhalUserLoader instance: -->
    <pepper id="phalUserLoader" class="__PhalUserLoader"/>
    
  </peppers>
  
</configuration>